html(lang="en")
head
  meta(charset="UTF-8")
  meta(name="viewport", content="width=device-width, initial-scale=1.0")
  title Ecommerce 
  link(rel="stylesheet", href="estilos.css")
  link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous")
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js')
body

nav.navbar.navbar-inverse.navbar-fixed-top
  .container
    .navbar-header.main-header
      a.navbar-brand(href='/')
      h1 Pagina principal de productos 
      .navbar-right.cart-status
        p
          i.glyphicon.glyphicon-shopping-cart
        
          a(href="/cart/" + auxiliar) Ir a carrito
          p(id="auxiliar" style="display:none" value="auxiliar") #{auxiliar}



ul.list-products.list-unstyled
  each n in Product
    div 
    li
      p
        img(src="https://loremflickr.com/640/480", width="80%" )
        span #{n.name}
        span $#{n.price}
        span #{n.category}
        span(style: "display: none") #{n._id}
        button(type="button" title="Agregar a Carrito" class="btn btn-success btnAddProduct" data-id = n.id data-usr = auxiliar ) Add To Cart
        button(type="button" title="Eliminar de BD", class="btn btn-danger btnDeleteProduct" data-id = n.id data-usr = auxiliar) Eliminar de BD

        br

h2 Agregar productos a la base de datos

form(action="/product",method="POST", )
  label(for="name" autocomplete="off") Ingresa nombre
  input#name(type="text", name="name")
  label(for="price" autocomplete="off") Ingresa el precio
  input#price(type="text", name="price")
  label(for="thumbnail" autocomplete="off") Agrega imagen
  input#thumbnail(type="file", name="thumbnail")
  label(for="category" autocomplete="off") Ingresa categoria
  input#category(type="text", name="category")
  label(for="description") Descripcion del producto
  input#description(type="text", name="description")
  label(for="stock") Stock Actual
  input#stock(type="text", name="stock")

  button(type="submit" value="agregar productos") Submit

     

script(src="ProductFunctions.js")
script(src="https://code.jquery.com/jquery-3.1.1.min.js")
script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js')



