html(lang='en')
head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  title Ecommerce 
  link(rel="stylesheet", href="estilos.css")
  link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous")
body
  h1 Lista de productos en carrito 

ul.list-products.list-unstyled
  each n in Cart
    div 
    li
      p
        img(src="https://loremflickr.com/640/480", width="20%" )
        span #{n.product}
      
      button Eliminar 
    div 
    a(href="/" onclick="redireccionar('/product')") Regresar a productos
    br
    a(href="http://localhost/order") Realizar orden   



        

